<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" prefHeight="704.0" prefWidth="1070.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="btl.project.QL_NV">
   <content>
      <VBox spacing="20.0">
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
         </padding>
         <children>
            <!-- Header -->
            <Label alignment="CENTER" style="-fx-background-color: #e96151;" text="Quản Lý Nhân Viên" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <padding>
                  <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
               </padding>
            </Label>

            <!-- Form nhập liệu -->
            <GridPane hgap="20.0" vgap="15.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
               <columnConstraints>
                  <ColumnConstraints minWidth="100.0" prefWidth="120.0" />
                  <ColumnConstraints minWidth="150.0" prefWidth="200.0" />
                  <ColumnConstraints minWidth="100.0" prefWidth="120.0" />
                  <ColumnConstraints minWidth="150.0" prefWidth="200.0" />
                  <ColumnConstraints minWidth="100.0" prefWidth="120.0" />
                  <ColumnConstraints minWidth="150.0" prefWidth="200.0" />
               </columnConstraints>

               <!-- Row 1 -->
               <Label text="Mã Nhân viên:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtID_NV" disable="true" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

               <Label text="Tên Nhân viên:" GridPane.rowIndex="0" GridPane.columnIndex="2">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtName_NV" GridPane.rowIndex="0" GridPane.columnIndex="3" />

               <Label text="Ngày Sinh:" GridPane.rowIndex="0" GridPane.columnIndex="4">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <DatePicker fx:id="dtpWasBorn_NV" GridPane.rowIndex="0" GridPane.columnIndex="5" />

               <!-- Row 2 -->
               <Label text="CMND:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtCMND_NV" onKeyTyped="#validateNumber" GridPane.rowIndex="1" GridPane.columnIndex="1" />

               <Label text="Số điện thoại:" GridPane.rowIndex="1" GridPane.columnIndex="2">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtPhoneNumber" onKeyTyped="#validateNumber" GridPane.rowIndex="1" GridPane.columnIndex="3" />

               <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="4">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="5" />

               <!-- Row 3 -->
               <Label text="Chức vụ:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <ComboBox fx:id="cbxCV" prefWidth="150.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />

               <Label text="Ca làm việc:" GridPane.rowIndex="2" GridPane.columnIndex="2">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <ComboBox fx:id="cbxCLV" prefWidth="150.0" GridPane.rowIndex="2" GridPane.columnIndex="3" />

               <Label text="Lương cơ bản:" GridPane.rowIndex="2" GridPane.columnIndex="4">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <TextField fx:id="txtSalary_NV" onKeyTyped="#validateNumber" GridPane.rowIndex="2" GridPane.columnIndex="5" />

               <!-- Row 4 -->
               <Label text="Giới tính:" GridPane.rowIndex="3" GridPane.columnIndex="0">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <HBox spacing="20.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                  <RadioButton fx:id="rbNam" text="Nam" />
                  <RadioButton fx:id="rbNu" text="Nữ" />
               </HBox>

               <Label text="Trạng thái:" GridPane.rowIndex="3" GridPane.columnIndex="2">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Label>
               <HBox spacing="20.0" GridPane.rowIndex="3" GridPane.columnIndex="3" GridPane.columnSpan="3">
                  <RadioButton fx:id="rbWorking" text="Đang làm việc" />
                  <RadioButton fx:id="rbStopped" text="Đã nghỉ việc" />
               </HBox>
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20.0">
               <Button mnemonicParsing="false" onAction="#PressAdd" style="-fx-background-color: #4CAF50;" text="Thêm" textFill="WHITE">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Button>
               <Button mnemonicParsing="false" onAction="#PressEdit" style="-fx-background-color: #2196F3;" text="Sửa" textFill="WHITE">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Button>
               <Button mnemonicParsing="false" onAction="#PressClear" style="-fx-background-color: #FF9800;" text="Làm mới" textFill="WHITE">
                  <font><Font name="System Bold" size="14.0" /></font>
               </Button>
            </HBox>

            <!-- Search box -->
            <TextField fx:id="txtSearch" onKeyTyped="#SearchNV" prefHeight="30.0" prefWidth="300.0" promptText="Tìm kiếm theo tên hoặc CMND">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </TextField>

            <!-- TableView -->
            <TableView fx:id="tblNV" onMouseClicked="#ShowInfoBacktoText" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="Index_table" prefWidth="50.0" text="STT" />
                  <TableColumn fx:id="IDtable" prefWidth="80.0" text="Mã NV" />
                  <TableColumn fx:id="NameNVtable" prefWidth="150.0" text="Tên NV" />
                  <TableColumn fx:id="WasBorn_table" prefWidth="100.0" text="Ngày sinh" />
                  <TableColumn fx:id="CMND_table" prefWidth="100.0" text="CMND" />
                  <TableColumn fx:id="SDT_table" prefWidth="100.0" text="SDT" />
                  <TableColumn fx:id="Email_table" prefWidth="150.0" text="Email" />
                  <TableColumn fx:id="Role_table" prefWidth="100.0" text="Chức vụ" />
                  <TableColumn fx:id="Salary_table" prefWidth="100.0" text="Lương" />
                  <TableColumn fx:id="Join_table" prefWidth="120.0" text="Ngày Gia Nhập" />
                  <TableColumn fx:id="TenCLV_table" prefWidth="150.0" text="Ca làm việc" />
                  <TableColumn fx:id="Status_table" prefWidth="120.0" text="Trạng Thái" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>